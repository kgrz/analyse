table.table.table-condensed
	thead
		tr
			th Names (chunk ID)
			th Modules
			th Size
			th Parents
			th Flags
	tbody
		each chunk in stats.chunks
			tr
				td
					a(href=`#chunk/${chunk.id}`)
						= `${chunk.names.join(', ')} (${chunk.id})`
				td= chunk.modules ? chunk.modules.length : "N/A"
				td= require("../../formatSize")(chunk.size)
				td
					each parent in chunk.parents
						a(href=`#chunk/${parent}`)= parent
						= " "
				td
					if chunk.rendered
						span.label.label-success rendered
						= " "
					if chunk.initial
						span.label.label-info initial
						= " "
					if chunk.entry
						span.label.label-danger entry
